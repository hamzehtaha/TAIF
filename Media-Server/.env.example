# Server Configuration
NODE_ENV=development
PORT=3000
ADMIN_PORT=3001
LOG_LEVEL=info

# Video Processing
VIDEO_UPLOAD_DIR=videos/uploads
VIDEO_STREAM_DIR=videos/streams
PUBLIC_DIR=./public
MAX_FILE_SIZE=5368709120
ALLOWED_FORMATS=mp4,mkv,avi,mov,wmv,flv,webm

# FFmpeg Transcoding
ENABLE_TRANSCODING=true
TRANSCODING_PRESETS=360p,480p,720p,1080p


# CORS Settings
CORS_ENABLED=true
ALLOWED_ORIGINS=*

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-secret-key-change-in-production-please
